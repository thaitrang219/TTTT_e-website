@model e_website.Context.Order

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<!-- Main content -->
<section class="content my-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <strong>XÁC NHẬN XOÁ ĐƠN HÀNG</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","Order")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Về danh sách</a>
                        <button class="btn btn-sm btn-danger" type="submit"><i class="fa fa-trash"></i> Xoá</button>
                    </div>
                </div>
            }
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th style="width:120px;">Tên trường</th>
                    <th>Nội dung</th>
                </tr>
                <tr>
                    <td>Tên đơn hàng</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>Trạng thái đơn hàng</td>
                    @if (Model.Status == 1)
                    {
                        <td>Đã xác nhận đơn hàng</td>
                    }
                    @if (Model.Status == null)
                    {
                        <td>Đang vận chuyển đơn hàng</td>
                    }
                </tr>
                <tr>
                    <td>Ngày tạo</td>
                    <td>@Html.DisplayFor(model => model.CreatedOnUtc)</td>
                </tr>
                <tr>
                    <td>ID của người dùng</td>
                    <td>@Html.DisplayFor(model => model.UserId)</td>
                </tr>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
